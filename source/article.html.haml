- @title = "#{current_page.title} | Positive Externality"

- wrap_layout :layout do
  %article.post
    .meta
      .date= current_page.date.strftime('%b %e, %Y')
      .tags= current_page.tags.join(", ")
    %h1.title= link_to current_page.title, current_page
    .entry-content
      = current_page.body
  .share
    .addthis_toolbox.addthis_default_style
      %a.addthis_button_facebook_like{"fb:like:layout" => "button_count"}
      %a.addthis_button_tweet
      %a.addthis_button_pinterest_pinit
      %a.addthis_counter.addthis_pill_style
    :javascript
      var addthis_config = {"data_track_addressbar":true};
    %script{:src => "//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-50f375741ce28b08", :type => "text/javascript"}

  #comment
    #disqus_thread
    :javascript
      /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
      var disqus_shortname = 'positiveexternality'; // required: replace example with your forum shortname

      /* * * DON'T EDIT BELOW THIS LINE * * */
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
    %a.dsq-brlink{:href => "http://disqus.com"}
      comments powered by
      %span.logo-disqus Disqus
